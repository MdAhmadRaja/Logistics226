<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/bg_history_border">

    <!-- FIRST CARD: Date, Logistic Name, Icon -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="#E0E0E0"
        app:cardElevation="4dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1"
            android:paddingVertical="4dp">

            <!-- Date: 30% -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="20 Oct"
                android:textSize="16sp"
                android:textColor="#800000"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Logistic Name: 70% -->
            <TextView
                android:id="@+id/tvLogisticName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:text=" Logistic Name"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif" />

            <!-- Icon: 0 size, no weight contribution -->
            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:layout_gravity="end"
                android:contentDescription="Icon"
                android:layout_marginEnd="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- SECOND CARD: Source → Destination + Ton/Rate/Call/Total -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="#F5F5F5"
        app:cardElevation="4dp"
        android:padding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Source → Destination -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSourceCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pune"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginStart="20dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="none"
                    android:singleLine="true"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/img_26"/>

                <TextView
                    android:id="@+id/tvDestinationCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mumbai"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginEnd="20dp" />

            </LinearLayout>

            <!-- Ton + Rate + Call + Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:gravity="center_vertical">

                <!-- Ton + Rate -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:id="@+id/tvTon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 Ton"
                        android:textSize="14sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tvRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹1500 / ton"
                        android:textSize="13sp"
                        android:textColor="#0F0E0E" />

                </LinearLayout>

                <!-- Call Icon -->
                <ImageView
                    android:id="@+id/ivCall"
                    android:layout_width="20dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_call"
                    android:contentDescription="Call"
                    android:background="@drawable/bg_call"
                    app:tint="#14891A" />

                <!-- Total Price -->
                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="₹15,000"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginEnd="20dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
