<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:layout_margin="8dp"
    android:background="@drawable/gradient_card_bg">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Left: Date Box -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/date2"
            android:padding="4dp">

            <TextView
                android:id="@+id/dayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/monthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OCT"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- Middle: Details -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/logisticName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logistic Name"
                android:textColor="#D32E2E"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/cityRoute2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source → Destination"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tonsPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tons: 5, ₹2000/Ton"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/contact2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 1234567890"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Right: Map Image Button -->
        <ImageButton
            android:id="@+id/mapButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/btn_star_big_on"
            android:contentDescription="Open Map"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
